<% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
<% end %>

<div class="row">
  <div class="col-md-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>Editing Book</h2>
  <%#= render 'layouts/errors_messages', errors: @book %>
  <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

<div class="form-group">
  <%= f.label :title, class:'control-label' %>
  <%= f.text_field :title, class:'form-control input-sm' %>
</div>

<div class="form-group">
  <%= f.label :body, 'Opinion',class:'control-label' %>
  <%= f.text_area :body, class:'form-control input-sm' %>
</div>

<div class="form-group">
  <%= f.submit 'Update Book', class:'btn btn-success btn-block' %>
</div>
<% end %>

<div>
  <%= link_to 'Show', book_path(@book) %>
  <span>|</span>
  <%= link_to 'Back', books_path %>
</div>
  </div>
</div>