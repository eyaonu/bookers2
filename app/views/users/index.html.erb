<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class= "col-md-3">
        <h2>User info</h2>
  <%= image_tag @user.get_profile_image(100,100) %>

<table class="table">
      <th>name<th>
      <th><%= @user.name %></th>
      <tr></tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
</table>

<div class="row">
  <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block" do %>
  <i class="fas fa-user-cog"></i>
  <% end %>

<%= form_with model:@book do |f| %>
  <div class="container px-5 px-sm-0">
    <h2 class="mt-3">New book</h2>
  <h6>Title</h6>
    <%= f.text_field :title,class: "col-md-12" %>
  <h6>Opinion</h6>
    <%= f.text_field :body,class: "col-md-12" %>
  <nav>
    <%= f.submit 'Create Book',class: "col-md-12 btn btn-primary" %>
  </nav>
<% end %>
  </div>
</div>
      </div>
<div class= "col-md-8 offset-md-1">
  <h2>Users</h2>
  <table class="table">
    <thead>
  <th>image</th><th>name</th>
<% @users.each do |user| %>
    </thead>
    
  <tr>
    <td><%= image_tag user.get_profile_image(100,100) %></td>
  <th><%= user.name %><th>
  <th><%= link_to "Show", user_path(user.id) %></th>
  </tr>
  <% end %>
  </table>
  </div>

</div>
</div>
</main>
