<div class="box">


<div class= "col-xs-3">
  <h2>User info</h2>
  <%= image_tag @user.get_profile_image(100,100) %>

  <h5>name</h5>
  <%= @user.name %>
  <h5>introduction</h5>
  <%= @user.introduction %>
  <%= link_to edit_user_path(current_user.id), class: "col-xs-12 btn btn-default" do %>
  <i class="fas.fa-user-cog"></i>
  <% end %>

  <!-- form_for部分 -->
  <%= form_with model:@book do |f| %>
    <h2>New book</h2>
        <h4>Title</h4>
        <%= f.text_field :title,class: "col-xs-12" %>

        <h4>Opinion</h4>
        <%= f.text_field :body,class: "col-xs-12" %>
        <nav>

        <%= f.submit 'Create Book',class: "col-xs-12 btn btn-primary" %>
        </nav>
        <% end %>
  </div>

  <div class= "col-xs-9">
    <h2>Users</h2>
    <table class='table'>

    <% @users.each do |user| %>
    <tr>
    <td><%= image_tag user.get_profile_image(100,100) %></td>
   <th><%= user.name %><th>
   <th><%= link_to"Show",user_path(user.id) %></th>
   </tr>
   <% end %>
   </table>
  </div>

  </div>
