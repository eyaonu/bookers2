<% if @user.errors %>
        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      <% end %>

<div class="box">
<h2>User_Info</h2>
<%= form_with model: @user, url: user_path(@user.id) do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"name"%>
  <label for="inputImage">ProfileImage</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
  <h4>introduction</h4>
  <%= f.text_area :introduction %>

    <%= f.submit 'Update User' %>

<% end %>

</div>
