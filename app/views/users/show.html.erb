<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class= "col-md-3">
        <h2>User info</h2>

<% if @user.profile_image.attached? %>
  <%= image_tag @user.profile_image %>
<% else %>
  <%= image_tag 'no_image' %>
<% end %>

<h5>name</h5>
  <%= @user.name %>
<h5>introduction</h5>
<%= @user.introduction %>
<%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block" do %>
<i class="fas fa-user-cog"></i>
<% end %>

<%= form_with model:@book do |f| %>
  <div class="container px-5 px-sm-0">
    <h2 class="mt-3">New book</h2>
  <h4>Title</h4>
    <%= f.text_field :title,class: "col-md-12" %>
  <h4>Opinipn</h4>
    <%= f.text_field :body,class: "col-md-12" %>
  <nav>
    <%= f.submit 'Create Book',class: "col-md-12 btn btn-primary" %>
  </nav>
<% end %>
  </div>
</div>

<div class= "col-md-8 offset-md-1">
  <h2>Books</h2>
  <table class="table table-hover table-inverse">

  <tr>
    <th></th>
  <th>Title</th>
  <th>Opinion</th>
  <th colspan="5"></th>
  </tr>

  <% @books.each do |book| %>
  <%= link_to user_path(@user.id) do %>
  <tr>
    <%= image_tag book.user.get_profile_image(100,100) %>
  <td><%#= attachment_image_tag book.user, :profile_image, :fill, 20, 20, fallback: "no_image.jpg",size:'20x20',format: 'no_image.jpg' %></td>
  <% end %>
  <td><%=link_to book.title, book_path(book.id)%></td>
  <td><%= book.body %></td>
  </tr>
  <% end %>
  </table>
  </div>
      </div>
</div>
</div>
</main>